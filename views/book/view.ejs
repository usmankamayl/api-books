<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <p class="card-text"><%= `Id: ${book.id}` %></p>
                <h5 class="card-title"><%= `Название книги: ${book.title}` %></h5>
                <p class="card-text"><%= `Содержание: ${book.desc}` %></p>
                <p class="card-text"><%= `Автор: ${book.authors}` %></p>
                <p class="card-text"><%= `Избранное: ${book.favorite}` %></p>
                <p class="card-text"><%= `Обложка: ${book.fileCover}` %></p>
                <p class="card-text"><%= `Файл: ${book.fileName}` %></p>
                <p class="card-text"><%= `Дата: ${book.date}` %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/book/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/book/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>