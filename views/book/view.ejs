<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= `Название книги: ${books.title}` %></h5>
                <p class="card-text"><%= `Содержание: ${books.desc}` %></p>
                <p class="card-text"><%= `Автор: ${books.authors}` %></p>
                <p class="card-text"><%= `Избранное: ${books.favorite}` %></p>
                <p class="card-text"><%= `Обложка: ${books.fileCover}` %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/book/update/<%= books.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/book/delete/<%= books.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>